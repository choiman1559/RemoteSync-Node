{
  "name": "remotesync_desktop",
  "productName": "SyncProtocol",
  "version": "0.1.6-1",
  "description": "",
  "main": "./src/main.js",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "deploy": "electron-builder build",
    "deployWin": "electron-builder --win --x64 --ia32"
  },
  "keywords": [],
  "author": "Choiman1559 <cuj1559@gmail.com>",
  "license": "LGPL-2.1",
  "devDependencies": {
    "electron-prebuilt": "^1.4.13",
    "electron": "^19.0.9",
    "electron-builder": "^23.1.0"
  },
  "dependencies": {
    "battery": "^1.0.1",
    "node-machine-id": "^1.1.12",
    "node-notifier": "^10.0.1",
    "open": "^8.4.0",
    "syncprotocol": "file:syncprotocol_lib"
  },
  "build": {
    "productName": "SyncProtocol",
    "appId": "com.sync.main",
    "asar": true,
    "protocols": {
      "name": "syncProtocol",
      "schemes": [
        "syncProtocol"
      ]
    },
    "win": {
      "target": [
        "zip",
        "nsis"
      ],
      "icon": "./src/res/icon.png"
    },
    "linux": {
      "target": [
        {
          "target": "deb",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "./src/res/icon.icns"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "directories": {
      "buildResources": "./resources/installer/",
      "output": "./out/",
      "app": "."
    },
    "files": [
      "**/*",
      "!src/config${/*}"
    ]
  }
}
